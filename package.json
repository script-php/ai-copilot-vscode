{
  "name": "ai-copilot-chat",
  "displayName": "AI Copilot Chat",
  "description": "AI-powered coding assistant with intelligent autocomplete and chat functionality",
  "version": "0.0.5",
  "publisher": "YoYo",
  "author": {
    "name": "YoYo"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/script-php/ai-copilot-vscode"
  },
  "bugs": {
    "url": "https://github.com/script-php/ai-copilot-vscode/issues"
  },
  "homepage": "https://github.com/script-php/ai-copilot-vscode#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "copilot",
    "chat",
    "autocomplete",
    "code completion",
    "assistant",
    "openai",
    "llm"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
          "command": "aiCopilot.triggerCompletion",
          "title": "Trigger AI Completion",
          "category": "AI Copilot",
          "icon": "$(sparkle)"
      },
      {
        "command": "aiCopilot.toggleChat",
        "title": "Toggle AI Chat",
        "category": "AI Copilot",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiCopilot.addFileToChat",
        "title": "Add to AI Copilot Chat",
        "category": "AI Copilot",
        "icon": "$(file-add)"
      },
      {
        "command": "aiCopilot.addSelectionToChat",
        "title": "Add Selection to AI Copilot Chat",
        "category": "AI Copilot",
        "icon": "$(selection)"
      },
      {
        "command": "aiCopilot.debugConfig",
        "title": "Debug Configuration",
        "category": "AI Copilot",
        "icon": "$(debug)"
      },
      {
        "command": "aiCopilot.testApi",
        "title": "Test API Connection",
        "category": "AI Copilot",
        "icon": "$(globe)"
      },
      {
        "command": "aiCopilot.clearCache",
        "title": "Clear Context Cache",
        "category": "AI Copilot",
        "icon": "$(clear-all)"
      },
      {
        "command": "aiCopilot.toggleCompletions",
        "title": "Toggle Code Completions",
        "category": "AI Copilot",
        "icon": "$(symbol-method)"
      }
    ],
    "keybindings": [
      {
          "command": "aiCopilot.triggerCompletion",
          "key": "ctrl+alt+space",
          "mac": "cmd+alt+space",
          "when": "editorTextFocus"
      },
      {
        "command": "aiCopilot.toggleChat",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "aiCopilot.addSelectionToChat",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorHasSelection"
      },
      {
        "command": "aiCopilot.toggleCompletions",
        "key": "ctrl+alt+x",
        "mac": "cmd+alt+x"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "aiCopilot.addFileToChat",
          "group": "navigation@1",
          "when": "!explorerResourceIsFolder && resourceExtname =~ /\\.(js|ts|jsx|tsx|py|java|c|cpp|cs|php|rb|go|rs|swift|kt|dart|scala|sh|ps1|sql|json|xml|yaml|yml|html|css|scss|sass|less|md|txt)$/"
        }
      ],
      "editor/context": [
        {
          "command": "aiCopilot.addSelectionToChat",
          "group": "navigation@1",
          "when": "editorHasSelection"
        }
      ],
      "editor/title": [
        {
          "command": "aiCopilot.addFileToChat",
          "group": "navigation@1",
          "when": "resourceExtname =~ /\\.(js|ts|jsx|tsx|py|java|c|cpp|cs|php|rb|go|rs|swift|kt|dart|scala|sh|ps1|sql|json|xml|yaml|yml|html|css|scss|sass|less|md|txt)$/"
        }
      ],
      "commandPalette": [
        {
          "command": "aiCopilot.debugConfig"
        },
        {
          "command": "aiCopilot.testApi"
        },
        {
          "command": "aiCopilot.clearCache"
        },
        {
          "command": "aiCopilot.toggleCompletions"
        }
      ],
      "view/title": [
        {
          "command": "aiCopilot.debugConfig",
          "when": "view == aiCopilotChat",
          "group": "navigation@1"
        },
        {
          "command": "aiCopilot.testApi",
          "when": "view == aiCopilotChat",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "AI Copilot",
      "properties": {
        "aiCopilot.enableLogging": {
            "type": "boolean",
            "default": true,
            "description": "Enable logging of AI prompts and responses to a file in the workspace root"
        },
        "aiCopilot.logLevel": {
            "type": "string",
            "default": "normal",
            "enum": ["minimal", "normal", "verbose"],
            "description": "Level of detail for logging"
        },
        "aiCopilot.serverUrl": {
          "type": "string",
          "default": "http://localhost:1234",
          "description": "AI Server URL (e.g., LM Studio, Ollama, or OpenAI-compatible endpoint)",
          "order": 1
        },
        "aiCopilot.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key (leave empty for local servers like LM Studio)",
          "order": 2
        },
        "aiCopilot.model": {
          "type": "string",
          "default": "local-model",
          "description": "Model name to use for completions and chat",
          "order": 3
        },
        "aiCopilot.completionsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable inline code completions",
          "order": 4
        },
        "aiCopilot.timeout": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Request timeout in milliseconds",
          "order": 5
        },
        "aiCopilot.debounceMs": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 2000,
          "description": "Debounce delay for autocomplete requests in milliseconds",
          "order": 6
        },
        "aiCopilot.maxTokens": {
          "type": "number",
          "default": 500,
          "minimum": 50,
          "maximum": 4000,
          "description": "Maximum tokens for code completions",
          "order": 7
        },
        "aiCopilot.chatMaxTokens": {
          "type": "number",
          "default": 2000,
          "minimum": 100,
          "maximum": 8000,
          "description": "Maximum tokens for chat responses",
          "order": 8
        },
        "aiCopilot.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for code completions (0.0 = deterministic, 2.0 = very creative)",
          "order": 9
        },
        "aiCopilot.chatTemperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for chat responses",
          "order": 10
        },
        "aiCopilot.enabledLanguages": {
          "type": "array",
          "default": [
            "javascript",
            "typescript",
            "python",
            "java",
            "csharp",
            "cpp",
            "c",
            "php",
            "ruby",
            "go",
            "rust",
            "swift",
            "kotlin",
            "dart",
            "scala",
            "html",
            "css",
            "scss",
            "json",
            "yaml",
            "xml",
            "sql",
            "shell",
            "powershell",
            "dockerfile",
            "markdown"
          ],
          "items": {
            "type": "string"
          },
          "description": "Languages for which to enable code completions",
          "order": 11
        },
        "aiCopilot.contextLines": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 50,
          "description": "Number of lines to include as context around cursor",
          "order": 12
        },
        "aiCopilot.historyMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Minutes of edit history to include in context",
          "order": 13
        },
        "aiCopilot.snippetMinutes": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 60,
          "description": "Minutes of viewed snippets to include in context",
          "order": 14
        },
        "aiCopilot.enableLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed logging for debugging",
          "order": 15
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiCopilot",
          "title": "AI Copilot",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "aiCopilot": [
        {
          "type": "webview",
          "id": "aiCopilotChat",
          "name": "Chat",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "extensionDependencies": [],
  "capabilities": {
    "virtualWorkspaces": {
      "supported": "limited",
      "description": "Some features may not work in virtual workspaces"
    },
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "Extension requires trusted workspace for API calls"
    }
  },
  "qna": "https://github.com/script-php/ai-copilot-vscode/discussions",
  "sponsor": {
    "url": "https://github.com/sponsors/YoYo"
  }
}
