{
  "name": "ai-copilot-chat",
  "displayName": "AI Copilot Chat",
  "description": "Chat with AI assistant with file and code attachment support",
  "version": "0.0.3",
  "publisher": "YoYo",
  "repository": {
    "url": "https://github.com/script-php/ai-copilot-vscode"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "ai", 
    "copilot", 
    "chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiCopilot.toggleChat",
        "title": "Toggle AI Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aiCopilot.addFileToChat",
        "title": "Add to Copilot Chat"
      },
      {
        "command": "aiCopilot.addSelectionToChat",
        "title": "Add Selection to Copilot Chat"
      },
      {
        "command": "aiCopilot.debugConfig",
        "title": "Debug AI Copilot Config",
        "icon": "$(debug)"
      },
      {
        "command": "aiCopilot.testApi",
        "title": "Test AI API Connection",
        "icon": "$(globe)"
      }
    ],
    "keybindings": [
      {
        "command": "aiCopilot.toggleChat",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "aiCopilot.addFileToChat",
          "group": "navigation",
          "when": "!explorerResourceIsFolder"
        }
      ],
      "editor/context": [
        {
          "command": "aiCopilot.addSelectionToChat",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ],
      "commandPalette": [
        {
          "command": "aiCopilot.debugConfig",
          "when": "true"
        },
        {
          "command": "aiCopilot.testApi",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "AI Copilot",
      "properties": {
        "aiCopilot.serverUrl": {
          "type": "string",
          "default": "http://localhost:1234",
          "description": "AI Server URL (e.g., LM Studio endpoint)"
        },
        "aiCopilot.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key (if required by your AI server)"
        },
        "aiCopilot.model": {
          "type": "string",
          "default": "local-model",
          "description": "Model name to use"
        }
      }
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "aiCopilot",
          "title": "AI Copilot",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "aiCopilot": [
        {
          "type": "webview",
          "id": "aiCopilotChat",
          "name": "Chat",
          "when": "aiCopilot.chatVisible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
